{
  "name": "heroku-cra-node",
  "version": "1.0.0",
  "description": "How to use create-react-app with a custom Node API on Heroku",
  "engines": {
    "node": "8.6.0"
  },
  "scripts": {
    "start": "node server",
    "dev": "NODE_ENV=development nodemon server",
    "heroku-postbuild":
      "cd react-ui/ && npm install && npm install --only=dev --no-shrinkwrap && npm run build",
    "test": "ENV=test jest",
    "test:watch": "ENV=test jest --watch"
  },
  "cacheDirectories": ["node_modules", "react-ui/node_modules"],
  "dependencies": {
    "bcrypt": "^1.0.3",
    "body-parser": "^1.18.1",
    "compression": "^1.7.0",
    "express": "^4.15.4",
    "jwt-simple": "^0.5.1",
    "moment": "^2.18.1",
    "pg-promise": "^6.8.0",
    "react-tooltip": "^3.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mars/heroku-cra-node.git"
  },
  "keywords": ["node", "heroku", "create-react-app", "react"],
  "license": "MIT",
  "devDependencies": {
    "dotenv": "^4.0.0",
    "jest": "^21.1.0"
  }
}
